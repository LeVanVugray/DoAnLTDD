<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarThemSp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF9800"
        app:title="Thêm sản phẩm"/>

    <!-- Các trường nhập liệu cho sản phẩm -->
    <EditText
        android:id="@+id/edtProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm" />

    <EditText
        android:id="@+id/edtProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sản phẩm" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"/>
    <!-- TextView hiển thị đường dẫn ảnh -->
    <TextView
        android:id="@+id/textViewImagePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đường dẫn ảnh: "
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>
    <!-- Nút chọn ảnh -->
    <Button
        android:id="@+id/buttonChooseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh sản phẩm"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Thêm sản phẩm    "
        android:layout_gravity="center"/>

</LinearLayout>
