<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:background="#B1BF5072">

    <Button
        android:id="@+id/bntquaylai"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:text="Quay Lại"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="148dp"
        android:layout_height="138dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="237dp"
        android:layout_height="61dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="204dp"
        android:gravity="center"
        android:text=" Quên Mật Khẩu"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="344dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="56dp"
        android:background="#F0E7E7"
        android:ems="10"
        android:hint="  Nhập E-Mail Hoặc Số Điện Thoại"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="225dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="E-Mail Hoặc Số Điện Thoại"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/bntxacnhanadmin"
        android:layout_width="339dp"
        android:layout_height="64dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="36dp"
        android:text="Xác Nhận"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <Button
        android:id="@+id/bntguima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:text="Gửi Mã"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="76dp"
        android:background="#FDFBFD"
        android:ems="10"
        android:hint="0"
        android:gravity="center"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword1"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="76dp"
        android:background="#FDFBFD"
        android:ems="10"
        android:hint="0"
        android:gravity="center"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="76dp"
        android:background="#FDFBFD"
        android:ems="10"
        android:hint="0"
        android:gravity="center"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="76dp"
        android:background="#FDFBFD"
        android:ems="10"
        android:hint="0"
        android:gravity="center"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>